<% if @article.errors.any? %>
<ul>
  <%= @article.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
</ul>
<% end %>

<%= form_for @article do |f| %>
    <p>
      <%= f.label :Title %>
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :Description %>
      <%= f.text_field :description %>
      <%= f.submit %>
    </p>
<% end %>
